/* 3.1. CREDITS
   ========================================================================== */

.credits {
  min-height: 70px;
  padding: 20px 0;
  background-color: $white;
  text-align: center;
}

/* love */

.credits .love {
  position: relative;
  display: inline-block;
  font-size: 1.4em;
  color: #965d00;
  transform: scale(.9);
  animation: love .5s infinite linear alternate-reverse;
}

@keyframes love {
  to {
    transform: scale(1.2);
  }
}

/* GitHub avatar */

.credits li {
  display: inline-block;
  width: 139px;
  list-style: none;
  text-align: left;
}

.credits li:last-child {
  width: 155px;
}

.credits li a {
  color: $saiku;
  border: none;
}

.credits li span {
  line-height: 1.5em;
  border-bottom: 1px dotted #333;
}

.credits li img {
  display: block;
  float: left;
  margin-right: 10px;
  border-radius: 4px;
}

.credits .meteoritebi-logo {
  display: block;
  margin-top: 10px;
}
