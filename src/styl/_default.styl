 /*! =========================================================================
   1. DEFAULT
   ========================================================================= */

/*! 1.1. CONTAINER
    ========================================================================== */

.container
  & > header
    width 90%
    max-width 69em
    margin 0 auto
    padding 2.875em 1.875em 1.875em
    .saiku-logo
      display block
    .description
      float left
      margin 0 0 0.6em 0
      font-size 1.500em
      font-weight 400
      line-height 1.3
    .social
      position relative
      top -15px
      float right
      text-align center
      a
        position relative
        display inline-block
        width 2.5em
        height 2.5em
        margin 0 .1em
        border 4px solid #ae1817
        border-radius 50%
        background #fff
        text-align left
        & > span
          display none
        &:hover
          background-color #ae1817
          &:before
            position absolute
            top 120%
            right 0
            width 600%
            color #ae1817
            content attr(data-info)
            text-align right
            pointer-events none
          .fa
            color #fff
        .fa
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          line-height 2
          color #ae1817
          text-align center
          text-indent 0

/*! 1.2. MAIN
    ========================================================================== */

.main
  width 90%
  margin 0 auto
  padding 1em
