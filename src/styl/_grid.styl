 /*! =========================================================================
   2. BOX GRID
   ========================================================================= */

/*! 2.1. GENERAL GRID STYLES
    ========================================================================== */

.box-grid:before,
.box-grid:after
  display table
  content " "

.box-grid
  margin 0
  padding 0 0 50px 0
  list-style none
  &:after
    clear both
  li
    float left
    width 33%
    height 420px
    border-top 1px solid #ddd
    text-align center
    &:nth-child(-n+3)
      border-top none
    &:nth-child(3n-1),
    &:nth-child(3n-2)
      box-shadow 1px 0 0 #ddd
